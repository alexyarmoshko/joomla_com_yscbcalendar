<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="component" label="COM_YSCBCALENDAR_CONFIG_COMPONENT_LABEL">
        <field
            name="default_view"
            type="list"
            label="COM_YSCBCALENDAR_CONFIG_DEFAULT_VIEW"
            description="COM_YSCBCALENDAR_CONFIG_DEFAULT_VIEW_DESC"
            default="week"
        >
            <option value="week">COM_YSCBCALENDAR_VIEW_WEEK</option>
            <option value="month">COM_YSCBCALENDAR_VIEW_MONTH</option>
        </field>

        <field
            name="week_start"
            type="list"
            label="COM_YSCBCALENDAR_CONFIG_WEEK_START"
            description="COM_YSCBCALENDAR_CONFIG_WEEK_START_DESC"
            default="1"
        >
            <option value="0">COM_YSCBCALENDAR_SUNDAY</option>
            <option value="1">COM_YSCBCALENDAR_MONDAY</option>
        </field>

        <field
            name="time_format"
            type="list"
            label="COM_YSCBCALENDAR_CONFIG_TIME_FORMAT"
            description="COM_YSCBCALENDAR_CONFIG_TIME_FORMAT_DESC"
            default="24"
        >
            <option value="12">COM_YSCBCALENDAR_TIME_12H</option>
            <option value="24">COM_YSCBCALENDAR_TIME_24H</option>
        </field>
    </fieldset>

    <fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            validate="rules"
            filter="rules"
            component="com_yscbcalendar"
            section="component"
        />
    </fieldset>
</config>
